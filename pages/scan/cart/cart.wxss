page { border-top : solid 1px #efefef; height : 100%; box-shadow: 0 5px 10px #f2f2f2 inset; background-color: #f8f8f8; }

.page { height : 100%; color : #4a4a4a; font-size : 24rpx; }
.content { padding : 15rpx; }
.toolbar { position: fixed; bottom : 0; left : 0; height : 100rpx; color : #fff; background-color: #000; text-align: center; line-height: 100rpx; width : 100%; }

.address { background-color: #fff; padding : 35rpx 30rpx 35rpx 35rpx; display: flex; box-shadow: 0 5px 10px #eee; }
.address .arrow { width : 30rpx; border : solid 1px #efefef; display: flex; justify-content : flex-end; align-items : center; }
.address .info { flex-grow : 1; }
.address .info .area { font-size : 34rpx;/* font-weight : bold;*/ padding : 5rpx 0; }
.address .info .area-sub { font-size : 24rpx; color : #9e9e9e; padding : 5rpx 0; }

.title { margin-top : 50rpx; height : 70rpx; position: relative; display: flex; padding-left : 20rpx; }
.title .sort { font-size : 46rpx; /*font-weight : bold;*/ font-family:Baskerville Old Face; position: relative; top : -10rpx; }
.title .split { height : 80rpx; width : 1px; background-color: #272933; transform:rotate(45deg); position: relative; left : 20rpx; }
.title .sort-name { position: relative; top : 20rpx; margin-left : 50rpx; }
.title .sort-name .english { height : 20rpx; font-size : 20rpx; }
.title .sort-name .chinese { font-size : 28rpx; height : 28rpx; /*font-weight: bold;*/ }

.content .list { margin-top : 20rpx; }

.item { padding : 10rpx; background-color: #fff; box-shadow: 0 5px 10px #eee; display: flex; margin-bottom : 10rpx; }
.item image { width : 230rpx; height : 230rpx; border : solid 1px #efefef; }
.item .item-info { padding : 30rpx 20rpx; width : 330rpx; display: flex; align-content : space-between; flex-wrap : wrap; }
.item .item-info .name { font-size : 32rpx; color : #4a4a4a; }
.item .item-info .per-price { margin-bottom : 20rpx; font-size : 26rpx; color : #9b9b9b;  }
.item .item-info .price-info view { display: inline; }
.item .item-info .price-info .favo-info { margin-left : 20rpx; }
.item .act { width : 50rpx; padding : 0 20rpx; display: flex; justify-content : center; align-items : center; border : solid 1px #efefef; }
.item:last-child { margin-bottom : 110rpx; }

.price { font-size : 32rpx; font-weight: bold; color : #ff502e; }
.price .sub { font-size : 18rpx; }
.favo-info { color : #9b9b9b; font-size : 28rpx; }