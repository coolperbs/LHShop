<view class="page-aftersale">
	<view class="ware pannel">
		<image class="ware-img" src="{{ware.wareImgUrl}}"></image>
		<view class="ware-detail">
			<view class="name ellipsis-2">{{ware.wareName}}</view>
			<text class="price">¥{{ware.showPrice}}</text>
			<text class="num">x{{ware.remainNum}}</text>
		</view>
	</view>

	<view class="return-detail pannel">
		<view class="line">
			<text class="title">退货原因</text>
			<view class="content" >			
				<!-- <text class="chose-return-reason">请选择</text> -->
				<picker mode="selector" range="{{reasonItems}}" bindchange="changeReason">
					<view class="text">{{submitObj&&submitObj.returnReason?submitObj.returnReason.reasonDesc:'请选择'}}</view>
				</picker>
				<image class='logo' src="../../asset/arrow-right.png"></image>
			</view>
		</view>
		<!-- <view class="line">
			<text class='title'>退款金额</text>
			<view class='content'>¥88.00</view>
		</view> -->
		<view class="line">
			<text class='title'>退货数量</text>
			<view class='content' bindtap="changeNum">
				<!-- <text>1</text> -->
				<picker mode="selector" range="{{numItems}}" bindchange="changeNum">
					<view class="text">{{submitObj&&submitObj.returnNum?submitObj.returnNum:'请选择'}}</view>
				</picker>
				<image class="logo" src="../../asset/arrow-right.png"></image>
			</view>
		</view>
		<view class="line">
			<text class='title'>退款说明</text>
			<view class='content notice'>
				<input placeholder="选填" placeholder-style="font-size:16px;color:#e5e5e5" bindinput="changeNotice"/>
			</view>
		</view>
	</view>

	<view class="upload pannel">
		<text class="title">上传凭证</text>
		<view class="btn-wrapper">
			<block wx:for="{{imageList}}" wx:key="index">
				<image src="{{item}}" class="logo" bindtap="delImg" data-index="{{index}}"></image>
			</block>
			<block wx:if="{{!imageList || imageList.length<3}}">
				<image src="../../asset/addimg-btn.png" class="logo" bindtap="uploadImg"></image>
			</block>
		</view>
	</view>

	<view class="submit-btn" bindtap="submit">
		提交评价
	</view>


	
</view>