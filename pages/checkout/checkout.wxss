.vip { margin-top : 40rpx; background-color: transparent; margin-bottom : 120rpx; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.1 ); line-height: 0; }
.vip image { width : 100%; }

.vip-bar { border-radius : 8rpx; color : #613B1A; display: flex; width : 100%; height : 120rpx; margin-top : 20rpx; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.1 ); position: relative; overflow: hidden; flex-direction : column; justify-content : center; align-items : center; background:  -webkit-gradient(linear, 100% 0, 0 0, from(#C3A161), to(#EBD9AC)); }
.vip-bar .main { font-size : 32rpx; font-weight : bold; }
.vip-bar .sub { font-size : 24rpx; margin-top : 8rpx; }
.vip-bar .sub .corss { display: inline; text-decoration:line-through; }
.vip-bar .tag { height : 40rpx; line-height: 40rpx; font-size : 20rpx; color : #fff; background-color: #B18139; width : 160rpx; position: absolute; text-align: center; left : -42rpx; top : 18rpx; transform : rotate( -45deg ); }


.title { padding : 20rpx 0; height : 70rpx; position: relative; display: flex; padding-left : 30rpx; background-color: #fff; border-bottom : solid 1px #f8f8f8; }
.title .sort { font-size : 46rpx;/* font-weight : bold;*/ font-family:Baskerville Old Face; position: relative; top : -10rpx; }
.title .split { height : 80rpx; width : 1px; background-color: #272933; transform:rotate(45deg); position: relative; left : 20rpx; }
.title .sort-name { position: relative; top : 20rpx; margin-left : 50rpx; }
.title .sort-name .english { height : 20rpx; font-size : 20rpx; }
.title .sort-name .chinese { font-size : 28rpx; height : 28rpx; font-weight: bold; }

.item { padding : 16rpx 30rpx; background-color: #fff; display: flex; align-items: center; }
.item image { width : 180rpx; height : 180rpx; }

.item .item-info {  height : 180rpx; padding-left: 20rpx; width : 390rpx; display: flex; flex-direction : column; justify-content : space-between; }
.item .item-info .name { font-size : 32rpx; color : #4a4a4a; }
/* 促销标签 */
.item .item-info .sub-name { font-size : 24rpx; color : #ccc; }
.item .item-info .labels { display: flex; width : 100%; }
.item .item-info .label { display: inline-flex; height : 24rpx; align-items : center; margin-right: 4rpx; font-weight : bold; }
.item .item-info .label .tag,
.item .item-info .label .info { height : 24rpx; line-height: 26rpx; padding : 0 8rpx; margin : 0; color : #FFFCE7; }
.item .item-info .label:first-child .tag:after { display: block; }
.item .item-info .label .tag { display:flex; background-color: #161823; color : #FFE0AE; font-size : 18rpx; position: relative; }
.item .item-info .label .tag .p { color : #FFE0AE; margin-left : 10rpx;}
.item .item-info .label .tag:after { content : ''; display: block; width: 0; height: 0; display: none; border-top: 8rpx solid #161823; border-right: 10rpx solid transparent; position: absolute; left : 0; bottom : -6rpx; }
.item .item-info .label.red .tag { background-color: #FF502E; color : #fff; padding : 0 10rpx; }
.item .item-info .label.red .tag:after { border-top: 8rpx solid #FF502E; }
.item .item-info .label .info { color : #fff; background-color: #CDA469; font-size : 18rpx; }

.item .item-info .price-info view { display: inline; }
.item .item-info .price-info .price { color : #0A0C11; }
.item .item-info .price-info .favo-info { margin-left : 16rpx; text-decoration:line-through; }
