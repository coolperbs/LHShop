.toolbar .btn { width : 50%; flex-grow : 1; text-align: left; display: flex; flex-direction : column; color : #0A0C11; justify-content : center; position: relative; font-size : 24rpx; }
.toolbar .btn .price { color : #0A0C11; }
.toolbar .btn.black { background-color: #161823; color : #fff; }
.toolbar .btn.black .price { color : #fff; margin : 0 8rpx; }
.toolbar .btn button { width : 100%; height : 100%; position: absolute; left : 0; top :0; opacity: 0; }
.toolbar .text { padding-left : 40rpx; height : 24rpx; line-height: 24rpx; }
.toolbar .info { padding : 0 10rpx 0 40rpx; height : 40rpx; line-height: 40rpx; display: flex; margin-top : 6rpx; align-items : flex-end; }
.toolbar .btn .more { display: block; width : 48rpx; height: 48rpx; line-height: 48rpx; position: absolute; right : 20rpx; top : 50%; margin-top : -24rpx; }
.toolbar .sub { margin : 0; }
.toolbar .btn:first-child:nth-last-child(1) { background-color: #161823; color : #fff; font-size : 34rpx; width : 100%; flex-direction : row; justify-content : center; align-items : center; }
.toolbar .btn:first-child:nth-last-child(1) .more { display: none; }
.toolbar .btn:first-child:nth-last-child(1) .info { padding-left : 20rpx; } 
.toolbar .btn:first-child:nth-last-child(1) .price { color : #fff; }
.toolbar .btn:first-child:nth-last-child(1) .text { padding-left : 0; }

