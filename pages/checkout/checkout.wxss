@import '../../common/basestyle/base.wxss';

page { height : 100%; background-color: #f8f8f8; color : #4a4a4a; font-size : 24rpx; }

.page { height : 100%; color : #4a4a4a; font-size : 24rpx; }

.head-nav { height : 20rpx; width : 100%; position: fixed; top : -18rpx; left : 0; background-color: #efefef; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.05 ); }
.page-tips { width : 100%; height : 60rpx; line-height: 60rpx; font-size : 26rpx; background-color: #DEBA7C; color : #fff; text-align: center; box-shadow: 0 10rpx 20rpx rgba( 222, 186, 124, 0.3 ); }

.price { font-size : 32rpx; font-weight: bold; color : #ff502e; display: inline-block; }
.price .sub { font-size : 28rpx; display: inline-block; }
.favo-info { color : #9b9b9b; font-size : 28rpx; }


.content { padding : 20rpx; }

.item-list { box-shadow: 0 5px 10px #eee; margin-bottom : 120rpx; margin-top : 40rpx; }
.toolbar { box-shadow: 0 -10rpx 20rpx rgba( 0, 0, 0, 0.05 ); display: flex; position: fixed; bottom : 0; left : 0; height : 100rpx; font-size : 32rpx; color : #fff; background-color: #fff; text-align: center; line-height: 100rpx; width : 100%; }
.toolbar .btn { flex-grow : 1; display: flex; justify-content : center; background-color: #000; font-size : 32rpx; }
.toolbar .pay-now { background-color: #fff; color : black; display: flex; flex-direction : column; justify-content : center; position: relative; }
.toolbar .pay-now view { line-height: 28rpx; padding : 0 30rpx; text-align: left; }
.toolbar .pay-now .text { font-size : 32rpx; color : #161823; margin-top : 10rpx; }
.toolbar .pay-now .info { font-size : 22rpx; color : #9b9b9b; margin-top : 10rpx; }
.toolbar .pay-now .more { display: block; width : 30rpx; height: 30rpx; line-height: 32rpx; position: absolute; right : 40rpx; top : 50%; margin-top : -15rpx; }
.toolbar .price { margin-left : 10rpx; font-weight : bold; display: inline; color : #fff; }
.toolbar .price .sub { display: inline; font-size : 24rpx; }

.toolbar .btn:first-child:nth-last-child(1) { font-size : 34rpx; }


.title { padding : 20rpx 0; height : 70rpx; position: relative; display: flex; padding-left : 30rpx; background-color: #fff; border-bottom : solid 1px #f8f8f8; }
.title .sort { font-size : 46rpx;/* font-weight : bold;*/ font-family:Baskerville Old Face; position: relative; top : -10rpx; }
.title .split { height : 80rpx; width : 1px; background-color: #272933; transform:rotate(45deg); position: relative; left : 20rpx; }
.title .sort-name { position: relative; top : 20rpx; margin-left : 50rpx; }
.title .sort-name .english { height : 20rpx; font-size : 20rpx; }
.title .sort-name .chinese { font-size : 28rpx; height : 28rpx; font-weight: bold; }

.item { padding : 16rpx; background-color: #fff; display: flex; }
.item image { width : 180rpx; height : 180rpx; }

.item .item-info { padding : 20rpx; width : 370rpx; display: flex; flex-direction : column; justify-content : space-between; }
.item .item-info .name { font-size : 32rpx; color : #4a4a4a; }
/* 促销标签 */
.item .item-info .labels { display: flex; width : 100%; }
.item .item-info .label { display: inline-flex; height : 24rpx; align-items : center; margin-right: 4rpx; font-weight : bold; }
.item .item-info .label .tag,
.item .item-info .label .info { height : 24rpx; line-height: 26rpx; padding : 0 8rpx; margin : 0; color : #FFFCE7; }
.item .item-info .label:first-child .tag:after { display: block; }
.item .item-info .label .tag { display:flex; background-color: #161823; color : #FFE0AE; font-size : 18rpx; position: relative; }
.item .item-info .label .tag .p { color : #FFE0AE; margin-left : 10rpx;}
.item .item-info .label .tag:after { content : ''; display: block; width: 0; height: 0; display: none; border-top: 8rpx solid #161823; border-right: 10rpx solid transparent; position: absolute; left : 0; bottom : -6rpx; }
.item .item-info .label.red .tag { background-color: #FF502E; color : #fff; padding : 0 10rpx; }
.item .item-info .label.red .tag:after { border-top: 8rpx solid #FF502E; }
.item .item-info .label .info { color : #fff; background-color: #CDA469; font-size : 18rpx; }

.item .item-info .price-info view { display: inline; }
.item .item-info .price-info .price { color : #0A0C11; }
.item .item-info .price-info .favo-info { margin-left : 16rpx; text-decoration:line-through; }
