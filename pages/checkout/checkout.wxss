.item .act { width : 60rpx; display: flex; padding : 20rpx 0; color : #4A4A4A; font-size : 28rpx; justify-content : flex-end; align-items : flex-end; }
.item .act .sub { font-size : 32rpx; margin-right : 6rpx; display: inline; }

.total { color : #4a4a4a; padding : 0 30rpx; height : 100rpx; line-height: 100rpx; background-color: #fff; text-align: right; font-size : 26rpx; }
.total .sub-info { margin-right : 6rpx; display: inline-block; font-size : 26rpx; }
.total .price { color : #000; font-weight : bold; }
.module { padding : 10rpx 0; background-color: #fff; }

.order-info { background-color: #fff; color : #4a4a4a; font-size : 32rpx; border-top : solid 1px #f8f8f8; box-shadow: 0 5px 10px #f2f2f2;  margin-bottom : 20rpx; }
.order-info .row { padding : 18rpx 0; display: flex; justify-content : space-between; border-bottom : solid 1px #f8f8f8; }
.order-info .row:last-child { border-bottom : 0; }
.order-info .row .primary { color : #ff543f; }
.order-info .row .key { padding-left : 30rpx;/* font-weight: bold;*/ width : 150rpx; }
.order-info .row .value { color : #9b9b9b; text-align: right; padding-right : 30rpx; max-width : 500rpx; flex-grow : 1; }
.order-info .row .value.black { color : #4A4A4A; }
.order-info .row .value .more { display: inline-block; width : 30rpx; height: 30rpx; line-height: 32rpx; }
.order-info .row.ableclick .value { padding-right : 60rpx; position: relative; }
.order-info .row.ableclick .value .more { position: absolute; right : 30rpx; top : 50%; margin-top : -14rpx; }


.sum { padding : 0 30rpx; background-color: #fff; }
.sum .row { height : 100rpx; font-size : 32rpx; display: flex; justify-content : space-between; align-items : center; position: relative; border-bottom : solid 1px #f8f8f8; }
.sum .row:first-child { border-top : solid 4rpx #f8f8f8; }
.sum .row:first-child::before { content : ' '; width : 100%; height : 0; border-bottom : solid 1px #f8f8f8; position: absolute; top : -8rpx; }
.sum .row:last-child::after { content : ' '; width : 100%; height : 0; border-bottom : solid 4rpx #f8f8f8; position: absolute; bottom  : -8rpx; }
.sum .row .value { display: flex; align-items: center; }
.sum .row .value .more { display: inline-block; width : 30rpx; height: 30rpx; line-height: 30rpx; }
.sum .row .value.red { color : #FF502E; }
.sum .row .sub { display: inline; color : #9B9B9B; }

.waiting { position: fixed; top : 0; left : 0; z-index : 1000000; height : 100%; width : 100%; background-color: rgba( 0, 0, 0, 0.5 ); display: flex; justify-content : center; align-items : center; }
.waiting .box { padding : 0rpx 20rpx 30rpx 20rpx; color : #4a4a4a; background-color: #fff; width : 600rpx; position : relative; top : -40rpx; border-radius: 8rpx; }
.waiting .box .status { font-size : 36rpx; padding : 40rpx 20rpx; display: flex; align-items : center; }
.waiting .box .status .text { margin-left : 18rpx; }
.waiting .box .step .s { font-size : 28rpx; padding : 30rpx 0 30rpx 70rpx; position: relative; }
.waiting .box .step .s:before { width : 14rpx; height : 14rpx; background-color: #ccc; content : ' '; display: block; position: absolute; border-radius: 50%; top : 38rpx; left : 32rpx; z-index : 2; }
.waiting .box .step .s.on:before { background-color: #666; }
.waiting .box .step .s:after { content: ' '; width : 2rpx; height : 96rpx; background-color: #E5E5E5; display: block; position: absolute; top : 50rpx; left : 39rpx; z-index: 1; }
.waiting .box .step .s:first-child { margin-top : 0; }
.waiting .box .step .s:last-child:after { display: none; }
.waiting .box .loading { position: relative; top : -4rpx; display: flex; justify-content : center; }
.waiting .box .loading image { width : 48rpx; height : 48rpx; animation:roll 0.6s infinite linear; }
@keyframes roll {
	from {transform: rotate(0deg);}
	to {transform: rotate(-360deg);}
}