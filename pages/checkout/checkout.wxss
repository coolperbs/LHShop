.item .act { width : 60rpx; display: flex; padding : 20rpx 0; color : #4A4A4A; font-size : 28rpx; justify-content : flex-end; align-items : flex-end; }
.item .act .sub { font-size : 32rpx; margin-right : 6rpx; display: inline; }

.total { color : #4a4a4a; padding : 0 30rpx; height : 100rpx; line-height: 100rpx; background-color: #fff; text-align: right; border-top: solid 1px #f8f8f8; font-size : 26rpx; }
.total .sub-info { margin-right : 6rpx; display: inline-block; font-size : 26rpx; }
.total .price { color : #000; font-size : 32rpx; font-weight : bold; }
.module { padding : 10rpx 0; background-color: #fff; }

.order-info { background-color: #fff; color : #4a4a4a; font-size : 32rpx; border-top : solid 1px #f8f8f8; box-shadow: 0 5px 10px #f2f2f2;  }
.order-info .row { padding : 18rpx 0; display: flex; justify-content : space-between; border-bottom : solid 1px #f8f8f8; }
.order-info .row:last-child { border-bottom : 0; }
.order-info .row .primary { color : #ff543f; }
.order-info .row .key { padding-left : 30rpx;/* font-weight: bold;*/ width : 150rpx; }
.order-info .row .value { color : #9b9b9b; text-align: right; padding-right : 30rpx; max-width : 500rpx; flex-grow : 1; }
.order-info .row .value.black { color : #4A4A4A; }
.order-info .row .value .more { display: inline-block; width : 30rpx; height: 30rpx; line-height: 32rpx; }
.order-info .row.ableclick .value { padding-right : 60rpx; position: relative; }
.order-info .row.ableclick .value .more { position: absolute; right : 30rpx; top : 50%; margin-top : -14rpx; }
