page{
    height: 100%
}
.address-wrap{
    width:750rpx;
    height: 100%;
    background-color: #f8f8f8;
}
.address-list{
}
.address-item{
    /*border-bottom:20rpx solid #f2f2f2;  */
    padding-top: 25rpx;
    margin-bottom: 20rpx;
    background-color: white;
}
.address-item .info{
    padding:0 30rpx;
    border-bottom:1rpx solid #f2f2f2; 
    height: 180rpx;
}
.address-item .info > view{
    height: 50rpx;
    line-height:50rpx;
}
.address-item .name{
    font-size:18px;
    margin-top:20rpx;
}
.address-item .address{
    font-size:24rpx;
    color:#777676;
    margin-top: 10rpx;
}
.address-item .name .mobile{
    padding-left:20rpx;
}
.address-item .handle{
    display:flex;
    flex-direction:row;
    padding:0 30rpx;
    height:80rpx;
    align-items:center;
}
.address-item .handle > view{
    flex:1;
    /*height:60rpx;*/
    font-size:12px;
    /*line-height:60rpx;*/
    color:#8c8b8b;
}
.address-item .handle .default{
    position: relative;
}
.address-item .handle .default .check{
    position:absolute;
    z-index:100;
    top:50%;
    margin-top:-12rpx;
    width:24rpx;
    height:24rpx;
}
.address-item .handle .default .check image{
    position:absolute;
    left:0;
    top: 0;
    width:24rpx;
    height:24rpx;
}
.address-item .status{
    /*height:60rpx;*/
    display:flex;
    align-items:center;
    justify-content:flex-end;

}
.address-item .status > view{
    /*float:right;*/
/*width:90rpx;*/
margin-left:20rpx;
font-size:13px;
display:flex;
align-items:center;


}
.address-item .status image{
    vertical-align:middle;
    width:25rpx;
    height:25rpx;
    margin-right: 10rpx
}
.address-item .status text{
    padding-left:40rpx;
    background-size:37rpx;
    background-position:left center;
    background-repeat:no-repeat;
}
.address-item .status text image{
    display: inline-block;
}
.empty{
    padding:60rpx 0rpx;
    font-size:30rpx;
    text-align: center;
}
.add-btn{
    margin-top:10rpx;
    position:fixed;
    bottom:0;
    height:100rpx;
    width:100%;
    justify-content:center;
    display:flex;
    align-items:center;
    background-color:#4a4a4a;
    color:white;
}
.add-btn image{
    width:25rpx;
    height:25rpx;
    margin-right:10rpx;
}
