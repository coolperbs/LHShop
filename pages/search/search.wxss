@import '../../views/mine/mine.wxss'
@import '../../widgets/common/common.wxss'
.search-content{
	display:flex;
	flex-wrap:wrap;
	
}
.seach-header{
	z-index:100;
	position:fixed;
	top:1px;
	left:0;
	width: 100%
}
.search-box{
	height:80rpx;
	border-bottom:solid 1px #f8f8f8;
	background-color:#fff;
	width:100%;
	display:flex;
	align-items:center;
	justify-content:center;
}
.sort-menu{
	display:flex;
	height: 80rpx;
	border-bottom:solid 1px #f8f8f8;
	background-color: white;
}
.sort-menu .menu-item{
	width: 250rpx;
	text-align: center;
	display: flex;
	align-items:center;
	justify-content:center;
}

.search-box input{
	width:550rpx;
background-color:#f8f8f8;
border-radius:150rpx;
padding-left:50rpx;
font-size:13px;
display:flex;
}
.search-box image{
	width:30rpx;
height:30rpx;
position:absolute;
z-index:10;
left:85rpx;
}
.search-scroll{
	display:flex;
	flex-wrap:wrap;
	width: 100%;
	/*padding: 44rpx 44rpx 0 44rpx;*/
	margin-top: 160rpx
}
.sort-logo{
	width: 40rpx;
	height: 50rpx;
}

.page-search .tpl-recommond-ware{
	/*width:331rpx;*/
	width: 50%;
	display:flex;
	flex-direction:column;
	align-items:center;
}
.page-search .tpl-recommond-ware .top{}
.page-search .tpl-recommond-ware .top .ware-img{
	width:300rpx;
	height:300rpx;
}
.page-search .tpl-recommond-ware .bottom{
	display:flex;
	flex-direction:column;
	height:200rpx;
	width:300rpx;
	position: relative;
}
.page-search .tpl-recommond-ware .bottom .ware-name{
	font-size:14px;
	color:#232323;
	height:25px;
	line-height:25px;
}
.page-search .tpl-recommond-ware .bottom .feature{
	font-size:13px;
	color:#969696;
	height:25px;
	line-height:25px;
}
.page-search .tpl-recommond-ware .bottom .price-info{}
.page-search .tpl-recommond-ware .bottom .price-info .new-price:before,
.page-search .tpl-recommond-ware .bottom .price-info .old-price:before{
	content:'ï¿¥';
}
.page-search .tpl-recommond-ware .bottom .price-info .new-price{
	color:#d24740;
	font-size: 14px;
	margin-right: 10rpx;
}
.page-search .tpl-recommond-ware .bottom .price-info .old-price{
	color:#969696;
	font-size: 12px;
	text-decoration: line-through;
}
.page-search .tpl-recommond-ware .bottom .addCart{
	position:absolute;
	top:110rpx;
	right:0;
}
.page-search .tpl-recommond-ware .bottom .addCart .cartimg{
	width: 50rpx;
	height: 50rpx
}
