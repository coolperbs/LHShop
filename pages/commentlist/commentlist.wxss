.page-commentlist{
	/*background-color: red;*/
}
.page-commentlist .tab{
	display:flex;
	height:50px;
	align-items:center;
	position: fixed;
	top:0;
	background-color: #fff;
	width:100%;
	z-index: 100
}
.page-commentlist .tab .tab-item{
	display:flex;
	height:50px;
	align-items:center;
	border-bottom:1px solid #f8f8f8;
	width:25%;
	text-align:center;
	justify-content:center;
	flex-direction:column;
	color:#434552;
}
.page-commentlist .tab .tab-item .content{
	display:flex;
	height:100%;
	align-items:center;
	text-align:center;
	justify-content:center;
	flex-direction:column;
	color:#999999;
	width:100rpx;
	position: relative;
}
.page-commentlist .tab .tab-item.active .content{
	color:#434552;
}
.page-commentlist .tab .tab-item .tab-title{
	font-size: 13px;
	margin-bottom: 17rpx;
}
.page-commentlist .tab .tab-item .tab-num{
	font-size: 12px
}
.page-commentlist .tab .tab-item.active .content:after{
	content:'';
	height: 3px;
	width:100%;
	background-color: #434552; 
	position: absolute;
	bottom: 0;
}
.page-commentlist .list-container{
	margin-top:50px;
}
.page-commentlist .comment-wrapper{
	/*height:210rpx;*/
	border-bottom:1px solid #f8f8f8;
	display:flex;
	padding:40rpx 40rpx 6rpx 40rpx;
}
.page-commentlist .left{
	height:100rpx;
	width:100rpx;
	display:flex;
	justify-content:center;
	align-items:center;


}
.page-commentlist .left image{
	height:100rpx;
	width:100rpx;
	border-radius: 50%
}
.page-commentlist .right{
	display:flex;
	justify-content:space-between;
	width:540rpx;
	font-size: 15px;
	padding-left:18rpx;
	position: relative;

}
.page-commentlist .right .top{}
.page-commentlist .right .bottom{}
.page-commentlist .right .name{
	font-size: 16px;
	color: #434552;
	letter-spacing: 0;
	padding-bottom: 15rpx;
	line-height: 16px;
}
.page-commentlist .right .time{
	font-family: PingFangSC-Regular;
	font-size: 12px;
	color: #CCCCCC;
	letter-spacing: 0;
}
.page-commentlist .right .content{}
.page-commentlist .starts{
	display:flex;
	/*justify-content:space-between;*/
	margin-bottom: 12rpx;
	line-height: 30rpx


}
.page-commentlist .starts image{
	width:30rpx;
	height:30rpx;
	margin-right:12rpx;

}
.page-commentlist .tickets{
	/*position:absolute;*/
	display:flex;
	flex-wrap:wrap;
	min-height: 72rpx
}
.page-commentlist .ticket{
	font-family:PingFangSC-Light;
	font-size:11px;
	color:#4A4A4A;
	letter-spacing:0;
	line-height:12px;
	background:#F5F5F5;
	border-radius:100px;
	padding:0 30rpx;
	margin-right:20rpx;
	margin-bottom:20rpx;
	height:44rpx;
	display:flex;
	justify-content:center;
	align-items:center;
}
.page-commentlist .time-wrapper{
	position: absolute;
	right: 0;
}

