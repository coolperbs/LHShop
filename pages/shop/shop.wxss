page { height : 100%; width : 100%; font-size : 28rpx; }

.head { height : 140rpx; width : 100%; background-color: #ccc; display : flex; position: relative; justify-content: space-between; align-items: center; }
.head .shop-info { color : #fff; position: relative; z-index: 10; margin-left: 20rpx; display: flex; }
.head .shop-info .logo { width : 80rpx; height: 80rpx; border-radius: 8rpx; }
.head .shop-info .info { margin-left : 20rpx; display: flex; flex-direction: column; justify-content: space-around; }
.head .shop-info .info .name { font-size: 32rpx; }
.head .shop-info .info .sub { font-size : 24rpx; }

.head .act { position: relative; z-index: 10; color : #fff; margin-right: 20rpx; display: flex; align-items: center; }
.head .act .star { font-size : 24rpx; }
.head .act .star .num { font-size : 28rpx; }
.head .act .flow { height : 44rpx; padding : 0 20rpx; border-radius: 21rpx; display: flex; align-items: center; margin-left: 20rpx; background-color: #df393c; font-size : 20rpx; }
.head .act .flow image { width : 24rpx; height: 24rpx; margin-right : 10rpx; position: relative; }
.head .back-pic { -webkit-filter: grayscale(100%); width: 100%; height: 100%; position: absolute; left : 0; top : 0; z-index: 1; }
.head .back-pic::before { content : ''; display: block; width: 100%; height : 100%; position: absolute; left: 0; top: 0; background-color: #000; z-index: 2; opacity: 0.5; }